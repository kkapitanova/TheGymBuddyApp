    app:startDestination="@+id/navigation_workouts">

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.example.thegymbuddyapp.ui.workouts.WorkoutsFragment"
        android:label="Workouts Archive"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_addworkout"
        android:name="com.example.thegymbuddyapp.ui.addWorkout.AddWorkoutFragment"
        android:label="Add Workout"
