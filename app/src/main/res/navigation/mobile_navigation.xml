    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.thegymbuddyapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_userguide"
        android:name="com.example.thegymbuddyapp.ui.UserGuide"
